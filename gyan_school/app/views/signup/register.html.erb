<div class="section">

  <div class="small">
    <p>
    <br>
  </div>

  <div class="medium">
    <div class="box">
       <div class="title">
         <h2>Signup</h2>
       </div>
       <div class="content forms">
          <%= form_tag('institue/create',:multipart => true,:method => :post) do -%>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'institute_name' ,"Institute Name" %>
              <%= text_field_tag 'institute_name',nil,:class => "medium"  %>
            </div>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'institute_url' ,"Choose URL" %>
              <%= text_field_tag 'institute_url',nil,:class => "medium"  %>
            </div>
            
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'first_name' ,"First Name" %>
              <%= text_field_tag 'first_name',nil,:class => "medium"  %>
            </div>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'last_name' ,"Last Name" %>
              <%= text_field_tag 'last_name',nil,:class => "medium"  %>
            </div>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'contact_email' ,"Contact Email" %>
              <%= text_field_tag 'contact_email',nil,:class => "medium"  %>
            </div>

            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'password' ,"Password" %>
              <%= password_field_tag 'password',nil,:class => "medium"  %>
            </div>

            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <button type="submit" class="green big" style="opacity: 0.7; "><span>Sumbit</span></button>
            </div>

          <% end -%>
       </div>
    </div>
    
  </div>

  <div class="small">
    
  </div>
  
</div>
