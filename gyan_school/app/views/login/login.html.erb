<div class="section">

  <div class="medium">
    <div class="box">
      <div class="title">
        <h2>Admin/Teacher/Employee Login</h2>
      </div>
      <div class="content forms">
          <%= form_tag('login/school',:multipart => true,:method => :post) do -%>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'user_name' ,"User Name/Email" %>
              <%= text_field_tag 'user_name',nil,:class => "medium"  %>
            </div>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'password' ,"Password" %>
              <%= password_field_tag 'password',nil,:class => "medium"  %>
            </div>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <button type="submit" class="green medium" style="opacity: 0.7; "><span>Sumbit</span></button>
            </div>
           
          <% end -%>
        
      </div>
      
    </div>
  </div>
  <div class="medium">
    <div class="box">
      <div class="title">
        <h2>Student/Parent Login</h2>
      </div>
      <div class="content forms">
          <%= form_tag('login/student',:multipart => true,:method => :post) do -%>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'user_name' ,"Student User Name" %>
              <%= text_field_tag 'user_name',nil,:class => "medium"  %>
            </div>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <%= label_tag 'password' ,"Password" %>
              <%= password_field_tag 'password',nil,:class => "medium"  %>
            </div>
            <div class="line" style="border-top-style: none; border-top-width: initial; border-top-color: initial; ">
              <button type="submit" class="green medium" style="opacity: 0.7; "><span>Sumbit</span></button>
            </div>
           
          <% end -%>
        
      </div>
      
    </div>
  </div>


  
</div>
