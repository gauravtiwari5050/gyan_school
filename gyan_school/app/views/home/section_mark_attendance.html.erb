<% content_for :left_bar do -%>
  <%= render 'left_bar' %>
<% end -%>
<% content_for :top_bar do -%>
  <%= render :template => "shared/top_bar" %>
<% end -%>
<% content_for :right_bar do -%>
  <%= render 'right_bar' %>
<% end -%>
<% content_for :main_content do -%>
  <h3> Attendance for <%= @section.batch.name + '-' + @section.name + ' for ' + @date.strftime("%B %d, %Y")%></h3>
  <% if  !flash[:notice].nil?%>
     <div class="alert alert-success">
      <a class="close">Ã—</a>
        <font color="black">
        Attendance updated 
        <%= link_to "Send SMS report to parents", '/section/',:class => 'btn btn-primary' %>
        </font>
      </div>
  <% end -%>

  <%= form_tag(params[:date] + '/update',:method => :post) do -%>
      <table class="table table-bordered">
         <thead>
          <tr>
            <th>Student Name</th>
            <th>Check if present</th>
          </tr> 
         </thead>
         <tbody>
    <% for student in @section.students -%>
          <tr>
            <td><%= student.fullname%></td>   
            <% if  is_student_present(student.id,@section.id,params[:date])%>
              <td><%=check_box_tag student.id ,student.id,true %></td>
              
            <% else %>
              <td><%=check_box_tag student.id%></td>
            <% end %>
          </tr> 
    <% end -%>   
         </tbody>
       </table>
  <div class="actions">
    <%= submit_tag nil,:class => 'btn  btn-primary'%>
  </div>
  <% end -%>
  
<% end -%>
