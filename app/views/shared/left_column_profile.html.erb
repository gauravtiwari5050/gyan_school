<%= render :template => 'shared/sidepic_profile',:locals => {:user => @user } %>
<% content_for :left_column do -%>
  
  
            <div class="leftcolumn">
              
              
              <a href="/profiles/<%=@user.id.to_s%>/show">
              <% if active == '' %>
                <div class="rowline-active" href="www.google.com">
              <% else %>
                <div class="rowline">
              <% end %>
                <img src="<%= asset_path 'ccihome.png' %>" class="thumbpic-small">  User Profile
              </div>
              </a>
              
              <% if current_user.type == 'Admin'  || @user.id == current_user.id%>
              <a href="/profiles/<%=@user.id.to_s%>/edit">
              <% if active == 'edit_details' %>
                <div class="rowline-active" href="www.google.com">
              <% else %>
                <div class="rowline">
              <% end %>
                <img src="<%= asset_path 'ccihome.png' %>" class="thumbpic-small">  Edit Details
              </div>
              </a>
              
                
              <a href="/profiles/<%=@user.id.to_s%>/reset_password">
              <% if active == 'reset_password' %>
                <div class="rowline-active">
              <% else %>
                <div class="rowline">
              <% end %>
                <img src="<%= asset_path 'cciuser-group.png' %>" class="thumbpic-small">  Reset Password
              </div>
              </a>


              <a href="/profiles/<%=@user.id.to_s%>/change_picture" class="iframe">
              <% if active == 'upload_picture' %>
                <div class="rowline-active">
              <% else %>
                <div class="rowline">
              <% end %>
                <img src="<%= asset_path 'cciuser-green.png' %>" class="thumbpic-small">  Upload Picture
              </div>
              </a>
              <% end %>
             
              <% if @user.type == 'Student' %>
                
              <a href="/print/report_card/<%=@user.id.to_s%>.pdf" target="_blank">
              <% if active == 'print_report' %>
                <div class="rowline-active">
              <% else %>
                <div class="rowline">
              <% end %>
                <img src="<%= asset_path 'cciuser-orange.png' %>" class="thumbpic-small">  Print Report
              </div>
              </a>
              <% end %>
             




              


              
              

              
            </div>
<% end -%>
