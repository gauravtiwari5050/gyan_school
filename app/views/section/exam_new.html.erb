
  <%= render :template => "shared/top_bar_new" %>
  <%= render :template => 'shared/left_column_section' ,:locals => {:active => 'attendance',:section => @section}%>
   <% content_for :breadcrumb do -%>
       <a href="/batch/<%=@section.batch.id.to_s+'/show'%>"><%=@section.batch.name%></a> <span class="divider">/</span>
       <a href="/section/<%=@section.id.to_s+'/show'%>"><%=@section.name%></a> <span class="divider">/</span>
   <% end -%>
<% content_for :main_content do -%>


       <div class="container">
        <div class="row">
          <div class="span3">
            <div class="btn-group">
            <a class="btn btn-large dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i> Add new Exam
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="/section/<%=@section.id.to_s%>/exams/new">Create Exam</a></li>
              <li class="divider"></li>
            </ul>
          </div>
            
          </div>
          <div class="span3">
          </div>

          <div class="span4">
            </br>
          </div>
          
        </div>
         
       </div>



      <div class="title" style="padding-top:25px">
        <table class='table'>
          <h3>  Create new exam for <%= @section.batch.name + "-" +  @section.name %> </h3>
        </table>
      </div>
        <%= form_for(@exam,:html =>{:class => 'form-horizontal',:multipart => true},:url => 'create' ,:method => :post) do |f| %>
         <fieldset> 
         <%= render :template => 'shared/notices' %>
  <%= render :template => "shared/form-errors",:locals => {:form => @exam} %>
            <div class="control-group">
              <%= f.label 'Exam Name/Type' ,"Exam Name/Type" ,:class=>"control-label" %>
              <div class="controls">
              <%= f.text_field 'name' %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label 'Starts At' ,"Starts At" ,:class=>"control-label" %>
              <div class="controls">
              <%= f.text_field 'start',:class => 'datepicker' %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label 'Ends At' ,"Ends At" ,:class=>"control-label" %>
              <div class="controls">
              <%= f.text_field 'end',:class=> 'datepicker' %>
              </div>
            </div>
           
            <div class="form-actions">
              <%= f.submit "Submit" ,:class => 'btn btn-primary'%>
            </div>
         </fieldset> 
          
      <% end -%>



  
<% end -%>
