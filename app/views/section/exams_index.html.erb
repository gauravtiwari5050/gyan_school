
  <%= render :template => "shared/top_bar_new" %>
  <%= render :template => 'shared/left_column_section' ,:locals => {:active => 'exams',:section => @section}%>
   <% content_for :breadcrumb do -%>
       <a href="/batch/<%=@section.batch.id.to_s+'/show'%>"><%=@section.batch.name%></a> <span class="divider">/</span>
       <a href="/section/<%=@section.id.to_s+'/show'%>"><%=@section.name%></a> <span class="divider">/</span>
       <a href="/section/<%=@section.id.to_s+'/exams'%>">All Exams</a> <span class="divider">/</span>
   <% end -%>
<% content_for :main_content do -%>


       <div class="container">
        <div class="row">
          <div class="span3">
            <div class="btn-group">
            <a class="btn btn-large dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i> Add new Exam
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="/section/<%=@section.id.to_s%>/exams/new">Create Exam</a></li>
              <li class="divider"></li>
            </ul>
          </div>
            
          </div>
          <div class="span3">
          </div>

          <div class="span4">
            </br>
          </div>
          
        </div>
         
       </div>



      <div class="title" style="padding-top:25px">
        <table class='table'>
          <h3>  Please select an exam from the list or create a new one for <%= @section.batch.name + "-" +  @section.name %> </h3>
        </table>
      </div>


         <%= render :template => 'shared/notices' %>
      
       <table class="table striped">
        <thead>
          <tr>
            <th> Exam Name</th>
            <th> Starts At</th>
            <th> Add Results</th>
            <th> Reminder</th>

          </tr>
          <tbody>
          <% for exam in @section.exams -%>
            <tr>
            <td> <%= exam.name %> </td>
            <td> <%= exam.start %></td>
            <td><%= link_to "Upload Results", "/section/"+@section.id.to_s+'/exams/'+ exam.id.to_s + '/subjects' ,:class=> 'btn btn-primary'%></td>
            <td><%= link_to "Send Reminder to Parents", "/section/"+@section.id.to_s+'/exams/'+ exam.id.to_s + '/reminder/send' ,:class=> 'btn btn-warning' ,:confirm => 'Are you sure ?'%></td>
            </tr>
          <% end -%>
          </tbody>
        </thead>
       </table>
      



  
<% end -%>
