<% content_for :left_bar do -%>
  <%= render 'left_bar' %>
<% end -%>
<% content_for :top_bar do -%>
  <%= render :template => "shared/top_bar" %>
<% end -%>
<% content_for :right_bar do -%>
  <%= render 'right_bar' %>
<% end -%>
<% content_for :main_content do -%>
      <div class="title">
        <table class='table'>
          <h3>  Please select a subject to see/change results for <%= @section.batch.name + "-" +  @section.name %> </h3>
        </table>
      </div>
      
       <table class="table striped">
        <thead>
          <tr>
            <th> Subject</th>
            <th> Add/Edit Results</th>

          </tr>
          <tbody>
          <% for subject in @institute.courses -%>
            <tr>
            <td> <%= subject.name %></td>
            <td><%= link_to "Results", "/section/"+@section.id.to_s+'/exams/'+ @exam.id.to_s + '/subjects/' + subject.id.to_s + '/show' ,:class=> 'btn btn-primary'%></td>
            </tr>
          <% end -%>
          </tbody>
        </thead>
       </table>

  
<% end -%>
